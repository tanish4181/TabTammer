{
    "manifest_version": 3,
    "name": "Tab Tammer",
    "version": "1.0",
    "description": "Removes distracting elements like comments and recommendations from the YouTube watch page.",
    "permissions": [
      "storage",
      "scripting"
    ],
    "host_permissions": [
      "*://*.youtube.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
      }
    },
    "icons": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/watch*"],
        "js": ["content.js"]
      }
    ]
  }
  